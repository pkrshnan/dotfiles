! Appearance
URxvt*.termName: rxvt-unicode-256color
urxvt.scrollBar: false
!! Font preferences
URxvt.font: xft:Iosevka SS07:size=10:style=Medium,xft:FantasqueSansMono Nerd Font Mono:size=10:style=Regular
URxvt.boldFont: xft:Iosevka SS07:size=9:style=Bold,xft:FantasqueSansMono Nerd Font Mono:size=10:style=bold
!! Larger history limit urxvt.saveLines: 1000000
URxvt.lineSpace: 3

URxvt.internalBorder: 40
!! Perl extensions
urxvt.perl-ext-common: default,matcher,font-size
URxvt.keysym.M-Escape:perl:keyboard-select:activate
URxvt.keysym.Control-Shift-V:     perl:pasta:paste
URxvt.clipboard.autocopy: true
!! Open urls in browser with Control-Click
urxvt.urlLauncher: /usr/bin/firefox
urxvt.matcher.button: C1
!! Change font size on Control-Plus/Minus
URxvt.keysym.Control-0x2b: perl:font-size:increase
URxvt.keysym.Control-0x2d: perl:font-size:decrease

!! Yeah, I am one of those, who use these keys in Vim :-(
urxvt.keysym.Home:          \033[1~
urxvt.keysym.End:           \033[4~
urxvt.keysym.Control-Up:    \033[1;5A
urxvt.keysym.Control-Down:  \033[1;5B
urxvt.keysym.Control-Left:  \033[1;5D
urxvt.keysym.Control-Right: \033[1;5C

