[colors]
background = ${xrdb:color0:#222}
background-alt = #22000000
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

[bar/example]
monitor = ${env:MONITOR:HDMI1-2}
width = 100%
height = 32
offset-x = 0%
offset-y = 0%
radius = 10
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

dim-value = 0.6

line-size = rgba(0, 0, 0, 0.05)
line-color = #f00

border-size = 20
border-bottom = 0
border-color = #00000000

padding-left = 1
padding-right = 3

module-margin-left = 3
module-margin-right = 3

font-0 = "Iosevka SS07:weight=semibold:size=8"
font-1 = "Wuncon Siji:pixelsize=10;1"
font-2 = fontawesome:pixelsize=10

modules-left = i3
modules-center = spotify 
modules-right = volume battery nm date powermenu

tray-position = right
tray-padding = 2
tray-transparent = false
tray-background = ${colors.background}

;wm-restack = i3

;override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
